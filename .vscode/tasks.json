{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vulkan-tutorials: Spell Check",
      "detail": "Run CSpell on all files in the workspace",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiBlue"
      },
      "type": "shell",
      "command": "cspell",
      "args": ["lint", "--dot", "**/*"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "autoDetect",
        "owner": "cspell task",
        "severity": "info",
        "source": "cspell",
        "pattern": [
          {
            "regexp": "(^[^:]+):(\\d+):(\\d+)\\s*-\\s*(.*$)",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ]
      }
    },
    {
      "label": "vulkan-tutorials: Markdownlint",
      "detail": "Run Markdownlint on all Markdown files in the workspace",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiBlue"
      },
      "type": "shell",
      "command": "markdownlint",
      "args": ["--ignore", "build/", "--dot", "--fix", "."],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "relative",
        "owner": "markdownlint task",
        "severity": "warning",
        "source": "markdownlint",
        "pattern": {
          "regexp": "(^[^:]+):(\\d+)\\s*(MD\\d+)\\/[^\\s]+\\s+(.*$)",
          "file": 1,
          "line": 2,
          "code": 3,
          "message": 4
        }
      }
    },
    {
      "label": "vulkan-tutorials: Prettier Format",
      "detail": "Run Prettier on all files in the workspace",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiBlue"
      },
      "type": "shell",
      "command": "prettier",
      "args": ["--write", "."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "vulkan-tutorials: Pipeline",
      "detail": "Run static analysis pipeline",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiMagenta"
      },
      "dependsOn": [
        "vulkan-tutorials: Spell Check",
        "vulkan-tutorials: Markdownlint",
        "vulkan-tutorials: Prettier Format"
      ],
      "problemMatcher": []
    }
  ]
}
